<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <!-- Dark Theme -->
    <style name="Theme.SilentTimer" parent="Theme.AppCompat">
        <item name="icon_add">@drawable/add</item>
        <item name="icon_arrow">@drawable/arrow</item>
        <item name="icon_check_all_items">@drawable/check_all_items</item>
        <item name="icon_check_mark">@drawable/check_mark</item>
        <item name="icon_reorder_handle">@drawable/reorder_handle</item>
        <item name="icon_trash">@drawable/trash</item>
        <item name="text_title_color">@color/white</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.SilentTimer.Light" parent="Theme.AppCompat.Light">
        <item name="icon_add">@drawable/add_light</item>
        <item name="icon_arrow">@drawable/arrow_light</item>
        <item name="icon_check_all_items">@drawable/check_all_items_light</item>
        <item name="icon_check_mark">@drawable/check_mark_light</item>
        <item name="icon_reorder_handle">@drawable/reorder_handle_light</item>
        <item name="icon_trash">@drawable/trash_light</item>
        <item name="text_title_color">@color/black</item>


    </style>




</resources>