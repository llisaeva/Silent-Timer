<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lisaeva.silenttimer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="30" />

    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <!-- General -->
    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.SilentTimer" >
        <uses-library
            android:name="androidx.test.app"
            android:required="false" />

        <!-- BroadCast receiver -->
        <receiver
            android:name="com.lisaeva.silenttimer.SilentIntervalReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.lisaeva.silenttimer.action_start" />
                <action android:name="com.lisaeva.silenttimer.action_stop" />
                <action android:name="com.lisaeva.silenttimer.action_activate" />
                <action android:name="com.lisaeva.silenttimer.action_deactivate" />
            </intent-filter>
        </receiver>

        <!-- Entry point -->
        <activity android:name="com.lisaeva.silenttimer.ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />
    </application>

</manifest>